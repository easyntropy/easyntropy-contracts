{
  "extends": [
    "solhint:recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "code-complexity": [
      "error",
      7
    ],
    "explicit-types": [
      "error",
      "explicit"
    ],
    "function-max-lines": [
      "error",
      50
    ],
    "interface-starts-with-i": "error",
    "max-line-length": [
      "error",
      135
    ],
    "max-states-count": [
      "error",
      15
    ],
    "no-console": "error",
    "no-empty-blocks": "error",
    "no-global-import": "off",
    "no-unused-import": "error",
    "no-unused-vars": "error",
    "one-contract-per-file": "error",
    "payable-fallback": "error",
    "reason-string": [
      "error",
      {
        "maxLength": 32
      }
    ],
    "constructor-syntax": "error",
    "gas-calldata-parameters": "error",
    "gas-custom-errors": "error",
    "gas-increment-by-one": "error",
    "gas-indexed-events": "error",
    "gas-length-in-loops": "error",
    "gas-multitoken1155": "off",
    "gas-named-return-values": "error",
    "gas-small-strings": "off",
    "gas-strict-inequalities": "error",
    "gas-struct-packing": "error",
    "comprehensive-interface": "off",
    "quotes": [
      "error",
      "double"
    ],
    "const-name-snakecase": "error",
    "contract-name-camelcase": "error",
    "event-name-camelcase": "error",
    "foundry-test-functions": [
      "off",
      [
        "setUp"
      ]
    ],
    "func-name-mixedcase": "error",
    "func-named-parameters": "off",
    "func-param-name-mixedcase": "error",
    "immutable-vars-naming": [
      "error",
      {
        "immutablesAsConstants": true
      }
    ],
    "imports-order": "off",
    "modifier-name-mixedcase": "error",
    "named-parameters-mapping": "error",
    "private-vars-leading-underscore": "off",
    "use-forbidden-name": "error",
    "var-name-mixedcase": "error",
    "imports-on-top": "error",
    "ordering": "off",
    "visibility-modifier-order": "error",
    "avoid-call-value": "error",
    "avoid-low-level-calls": "error",
    "avoid-sha3": "error",
    "avoid-suicide": "error",
    "avoid-throw": "error",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "compiler-version": [
      "error",
      "0.8.20"
    ],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "multiple-sends": "error",
    "no-complex-fallback": "error",
    "no-inline-assembly": "error",
    "not-rely-on-block-hash": "error",
    "not-rely-on-time": "off",
    "reentrancy": "error",
    "state-visibility": "error",
    "prettier/prettier": "error"
  }
}